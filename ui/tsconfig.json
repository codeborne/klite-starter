{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src", "i18n"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "target": "esnext",
    "noEmit": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUncheckedSideEffectImports": true
  }
}
